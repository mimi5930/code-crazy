<div class='container d-flex justify-content-center'>
	<h1>My Blog Posts</h1>
</div>

{{#if posts.length}}
	<div class='container'>
		<h3>Select a post to edit</h3>
	</div>
{{/if}}
{{#each posts as |post|}}
	<div class='container'>
		<div class='card mt-3'>
			<div class='card-body'>
				<h2 class='card-title post-title'><a
						href='/dashboard/edit/{{post.id}}'
					>{{post.title}}</a></h2>
				<p class='card-text'>{{post.post_text}}</p>
				<div class='card-text d-flex flex-row justify-content-end post-info'>
					<p class='card-text post-created'>created on {{post.created_at}}</p>
					<p class='card-text'><a
							href='/dashboard/edit/{{id}}'
						>{{post.comments.length}}
							comment(s)</a></p>
				</div>
			</div>
		</div>
	</div>
{{/each}}
<div class='container mt-5'>
	<a class='btn btn-success' href='/dashboard/new-post'>Add a new post</a>
</div>